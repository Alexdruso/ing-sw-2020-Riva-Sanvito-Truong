<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="400.0" prefWidth="720.0" style="-fx-background-color: #00000088;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.client.ui.gui.guicontrollers.LoseGameController">
   <children>
      <VBox alignment="CENTER" spacing="10.0" StackPane.alignment="CENTER">
         <children>
            <Label fx:id="mainPrompt" alignment="CENTER" contentDisplay="CENTER" maxHeight="1.7976931348623157E308" prefHeight="10.0" prefWidth="700.0" styleClass="h3" text="%you_lost" textFill="WHITE" textOverrun="CLIP" wrapText="true">
               <font>
                  <Font size="57.0" />
               </font>
            </Label>
            <Label fx:id="winnerName" alignment="CENTER" contentDisplay="CENTER" maxHeight="1.7976931348623157E308" styleClass="h3" text="%do_you_want_to_keep_watching_the_game" textAlignment="CENTER" wrapText="true" VBox.vgrow="NEVER" />
            <Button alignment="CENTER" mnemonicParsing="false" onAction="#handleMenu" prefHeight="50.0" prefWidth="350.0" styleClass="bigbutton" text="%menu" />
            <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#handleReconnect" prefHeight="50.0" prefWidth="350.0" styleClass="bigbutton" text="%join_another_lobby" textAlignment="CENTER" />
            <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#handleSpectate" prefHeight="50.0" prefWidth="350.0" styleClass="bigbutton" text="%rejoin_as_spectator" textAlignment="CENTER" />
         </children>
      </VBox>
   </children>
</StackPane>
